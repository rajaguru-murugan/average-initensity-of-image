all: face_tracking loss_function avg_intensity
.PHONY: face_tracking loss_function avg_intensity

face_tracking:
	g++ -O3 -Wall -o face_tracking ../src/face_tracking.cpp `pkg-config --cflags --libs opencv` -std=c++11
loss_function:
	g++ -O3 -Wall -o loss_function ../src/loss_function.cpp -std=c++11
avg_intensity:
	g++ -O3 -Wall -o avg_intensity ../src/avg_intensity.cpp `pkg-config --cflags --libs opencv` -std=c++11

clean:
	rm face_tracking loss_function avg_intensity
